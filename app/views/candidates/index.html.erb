<h1>候選人列表</h1>

<%= paginate @candidates, theme: 'twitter-bootstrap-4' %>

<ul>
<% @candidates.each do |candidate| %>
  <li>
    <%= link_to "投票給這位！", vote_candidate_path(candidate), class: 'btn btn-xs btn-warning', method: 'put', data: { confirm: '確認投票?!'} %>
    (<%= candidate.vote %>票)
    <%= link_to candidate.name, candidate_path(candidate) %>
    <%= link_to "編輯", edit_candidate_path(candidate), class: 'btn bg-xs btn-success' %>
    <%= link_to "刪除", candidate_path(candidate), class: 'btn bg-xs btn-danger', method: 'delete', data: { confirm: '確定嗎?!'} %>
  </li>
<% end %>
</ul>

<%= link_to '新增候選人', new_candidate_path, class: 'btn btn-primary btn-lg' %>